<Window x:Class="TRIZBD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRIZBD"
        mc:Ignorable="d"
        Title="Мероприятия" Height="450" Width="800"
        MinHeight="400" MaxHeight="500" MinWidth="750" MaxWidth="850"
        WindowStartupLocation="CenterScreen">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="1" Grid.Column="1" BorderBrush="Yellow" BorderThickness="5" 
                Content="Мероприятия" FontWeight="Bold" FontSize="20" Background="Black" 
                Foreground="Yellow" Click="Button_Click"/>

        <Button Grid.Row="1" Grid.Column="2" BorderBrush="Yellow" BorderThickness="5" 
                Content="Типы" FontWeight="Bold" FontSize="20" Background="Black" 
                Foreground="Yellow" Click="Button_Click_1"/>

        <Button Grid.Row="1" Grid.Column="3" BorderBrush="Yellow" BorderThickness="5" 
                Content="Локации" FontWeight="Bold" FontSize="20" Background="Black" 
                Foreground="Yellow" Click="Button_Click_2"/>

        <Button Grid.Row="1" Grid.Column="4" BorderBrush="Yellow" BorderThickness="5" 
                Content="Организаторы" FontWeight="Bold" FontSize="20" Background="Black" 
                Foreground="Yellow" Click="Button_Click_3"/>

        <Button Grid.Row="2" Grid.Column="1" BorderBrush="Yellow" BorderThickness="5" 
                Content="Участники" FontWeight="Bold" FontSize="20" Background="Black" 
                Foreground="Yellow" Grid.ColumnSpan="2" Margin="87,120,87,36" Grid.RowSpan="3" Click="Button_Click_4"/>

        <Button Grid.Row="2" Grid.Column="2" BorderBrush="Yellow" BorderThickness="5" 
                Content="Регистрации" FontWeight="Bold" FontSize="20" Background="Black" 
                Foreground="Yellow" Grid.ColumnSpan="2" Margin="87,120,87,36" Grid.RowSpan="3" Click="Button_Click_5"/>

        <Button Grid.Row="2" Grid.Column="3" BorderBrush="Yellow" BorderThickness="5" 
                Content="Отзывы" FontWeight="Bold" FontSize="20" Background="Black" 
                Foreground="Yellow" Grid.ColumnSpan="2" Margin="87,120,87,36" Grid.RowSpan="3" Click="Button_Click_6"/>

        <Label Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Foreground="Yellow" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontWeight="Bold">МЕНЮ</Label>
    </Grid>
</Window>
